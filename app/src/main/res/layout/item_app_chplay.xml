<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tvID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#B8A5A2"
        android:textSize="18sp"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/imgApp"
        android:layout_margin="10dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/candy_crush"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvID"
        android:layout_width="0dp"
        android:layout_height="60dp"></ImageView>

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:id="@+id/tvAppname"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/imgApp"
        app:layout_constraintTop_toTopOf="@id/imgApp"
        app:layout_constraintLeft_toRightOf="@id/imgApp"
        android:textSize="18sp"
        android:text="Candy Crush Saga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tvCompany"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintBottom_toBottomOf="@id/imgApp"
        app:layout_constraintTop_toTopOf="@id/imgApp"
        app:layout_constraintLeft_toRightOf="@id/imgApp"
        android:textSize="13sp"
        android:text="King"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tvRating"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toBottomOf="@id/imgApp"
        app:layout_constraintTop_toTopOf="@id/imgApp"
        app:layout_constraintLeft_toRightOf="@id/imgApp"
        android:textSize="13sp"
        android:text="4.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    
    <ImageView
        android:src="@drawable/round_more_vert_black_18dp"
        app:layout_constraintTop_toTopOf="@id/tvAppname"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>

    <TextView
        android:textColor="#319E34"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/imgApp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:text="Miễn phí"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        app:layout_constraintVertical_bias="0.9"
        android:src="@drawable/round_star_black_18dp"
        app:layout_constraintTop_toTopOf="@id/imgApp"
        app:layout_constraintBottom_toBottomOf="@id/imgApp"
        app:layout_constraintLeft_toRightOf="@id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>