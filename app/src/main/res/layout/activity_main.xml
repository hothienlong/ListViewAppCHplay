<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:paddingTop="15dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#3F9842"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_weight="2"
            android:src="@drawable/round_arrow_back_white_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:layout_weight="7"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="Biểu đồ hàng đầu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/round_search_white_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#EDECEC"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Hiển thị ứng dụng đã cài đặt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>

        <ImageView
            android:layout_weight="1"
            android:layout_gravity="right"
            android:src="@drawable/baseline_toggle_off_white_18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ImageView>
    </LinearLayout>

    <ListView
        android:id="@+id/lvAppCH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>
